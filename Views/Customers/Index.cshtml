@model IEnumerable<BankTransactions.Models.Customer>

@{
    ViewData["Title"] = "Customers";
}

@section Search {
    @{
        await Html.RenderPartialAsync("_SearchPartial");
    }
}

<table class="table" id="search-table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Birthday)
            </th>
            <th>
                 <a asp-action="AddOrEdit" class="btn btn-sm btn-success">
                    <i class="fa-solid fa-plus"></i> New
                </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Birthday)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.CustomerId" class="btn">
                    <i class="fa-solid fa-pen-to-square"></i>
                </a>
                <a asp-action="Details" asp-route-id="@item.CustomerId" class="btn">
                    <i class="fa-solid fa-circle-info"></i>
                </a>
                <form asp-action="Delete" asp-route-id="@item.CustomerId" style="display: inline;">
                    <button type="submit" class="btn">
                        <i class="fa-sharp fa-solid fa-trash"></i>
                    </button>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>